@page "/sedes"
@using CurrieTechnologies.Razor.SweetAlert2;
@using Distribuidora.Shared.Entities;
@using Distribuidora.WEB.Repositories;
@inject NavigationManager navigationManager
@inject SweetAlertService swal


@inject IRepository repository

<h3>Sedes</h3>

<Pagination CurrentPage="currentPage"
            TotalPages="totalPages"
            SelectedPage="SelectedPage" />


<div class="mb-3">
    <a class="btn btn-primary" href="/sedes/create">Nueva sede</a>
</div>


<GenericList MyList="Sedes">

    <Body>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Sede</th>
                    <th style="width:220px">Tipo de licores</th>
                    <th style="width:300px"></th>

                </tr>
            </thead>
            <tbody>
                @foreach (var sede in Sedes!)
                {
                    <tr>                     
                        <td>
                            @sede.Name
                        </td>
                        <td>
                            @sede.TipoLicorsNumber
                        </td>

                        <td>
                            <a href="/sedes/details/@sede.Id" class="btn btn-info">Detalles</a>
                            <a href="/sedes/edit/@sede.Id" class="btn btn-warning">Editar</a>
                            <button class="btn btn-danger" @onclick=@(() => Delete(sede))>Borrar</button>
                        </td>

                    </tr>
                }
            </tbody>
        </table>

    </Body>

</GenericList>

@code {
    public List<Sede>? Sedes { get; set; }
    private int currentPage = 1;
    private int totalPages;


    protected async override Task OnInitializedAsync()
    {
        await Load();
    }

    private async Task SelectedPage(int page)
    {
        currentPage = page;
        await Load(page);
    }


    private async Task Load(int page = 1)
    {
        string url1 = $"api/sedes?page={page}";
        string url2 = $"api/sedes/totalPages";

        var responseHppt = await repository.Get<List<Sede>>(url1);
        var responseHppt2 = await repository.Get<int>(url2);
        Sedes = responseHppt.Response!;
        totalPages = responseHppt2.Response!;
    }


    private async Task Delete(Sede sede)
    {
        var result = await swal.FireAsync(new SweetAlertOptions
            {
                Title = "Confirmación",
                Text = "¿Esta seguro que quieres borrar el registro?",
                Icon = SweetAlertIcon.Question,
                ShowCancelButton = true
            });

        var confirm = string.IsNullOrEmpty(result.Value);

        if (confirm)
        {
            return;
        }

        var responseHTTP = await repository.Delete($"api/sedes/{sede.Id}");

        if (responseHTTP.Error)
        {
            if (responseHTTP.HttpResponseMessage.StatusCode == System.Net.HttpStatusCode.NotFound)
            {
                navigationManager.NavigateTo("/");
            }
            else
            {
                var mensajeError = await responseHTTP.GetErrorMessageAsync();
                await swal.FireAsync("Error", mensajeError, SweetAlertIcon.Error);
            }
        }
        else
        {
            await Load();
        }
    }

}
